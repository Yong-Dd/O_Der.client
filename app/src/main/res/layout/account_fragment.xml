<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/titleTop"
    android:paddingBottom="10dp"
    tools:context=".AccountFragment">

    <FrameLayout
        android:id="@+id/A_noLogIn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="로그인이 필요한 페이지입니다!\n 로그인을 먼저 해주세요:D"
            android:textColor="@color/black"
            android:textSize="@dimen/announceText" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/titleBottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/arrowTitle"
            android:gravity="center"
            android:text="마이페이지"
            android:textColor="@color/black"
            android:textSize="@dimen/titleText"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/A_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프로필"
            android:textColor="@color/black"
            android:textSize="@dimen/subTitleText"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/A_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:text="디디"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <android.widget.Button
                android:id="@+id/A_NameEditButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/edit_pencil" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/A_editNameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/lightGrey"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/A_editName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@drawable/input_focus"
                android:ems="12"
                android:gravity="center_vertical"
                android:hint="수정할 이름을 작성해주세요"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/cursor" />

            <android.widget.Button
                android:id="@+id/A_EditNameConfirmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/edit_button"
                android:text="수정"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/A_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/line_grey_2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <LinearLayout
        android:id="@+id/orderListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/A_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="주문 내역 조회"
            android:textColor="@color/black"
            android:textSize="@dimen/subTitleText"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/A_orderListButton"
            android:layout_width="@dimen/arrowLittle"
            android:layout_height="@dimen/arrowLittle"
            android:layout_gravity="right"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/A_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/line_grey_2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <LinearLayout
        android:id="@+id/stampLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/a_title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스탬프"
            android:textColor="@color/black"
            android:textSize="@dimen/subTitleText"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/A_stampCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text="5"
                android:textColor="@color/mainColor"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:text=" / 10 개"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <android.widget.Button
                android:id="@+id/A_stampButton"
                android:layout_width="@dimen/arrowLittle"
                android:layout_height="@dimen/arrowLittle"
                android:layout_gravity="right"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:gravity="right" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/A_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/line_grey_2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <LinearLayout
        android:id="@+id/logOutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/A_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="로그아웃"
            android:textColor="@color/black"
            android:textSize="@dimen/subTitleText"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/A_logOutButton"
            android:layout_width="@dimen/arrowLittle"
            android:layout_height="@dimen/arrowLittle"
            android:layout_gravity="right"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_right_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/A_line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/line_grey_2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

</LinearLayout>