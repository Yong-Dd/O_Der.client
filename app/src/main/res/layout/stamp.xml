<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/titleTop"
        android:layout_marginBottom="@dimen/titleBottom"
        android:orientation="horizontal">

        <android.widget.Button
            android:id="@+id/backButton"
            android:layout_width="@dimen/arrowTitle"
            android:layout_height="@dimen/arrowTitle"
            android:layout_gravity="left"
            android:layout_marginStart="@dimen/arrowLeft"
            android:layout_marginLeft="@dimen/arrowLeft"
            android:background="@drawable/ic_baseline_keyboard_arrow_left_24" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/arrowTitle"
            android:layout_marginEnd="@dimen/titleRight"
            android:layout_marginRight="@dimen/titleRight"
            android:gravity="center"
            android:text="스탬프"
            android:textColor="@color/black"
            android:textSize="@dimen/titleText"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp
">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:paddingTop="5dp">

                    <ImageView
                        android:id="@+id/s1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:tint="@color/grey"
                        app:srcCompat="@drawable/logo_base_color"
                        tools:ignore="UseAppTint" />

                    <ImageView
                        android:id="@+id/s2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:tint="@color/grey"
                        tools:ignore="UseAppTint"
                        app:srcCompat="@drawable/logo_base_color" />

                    <ImageView
                        android:id="@+id/s3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:tint="@color/grey"
                        tools:ignore="UseAppTint"
                        app:srcCompat="@drawable/logo_base_color" />

                    <ImageView
                        android:id="@+id/s4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:tint="@color/grey"
                        tools:ignore="UseAppTint"
                        app:srcCompat="@drawable/logo_base_color" />

                    <ImageView
                        android:id="@+id/s5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:tint="@color/grey"
                        tools:ignore="UseAppTint"
                        app:srcCompat="@drawable/logo_base_color" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/s6"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:tint="@color/grey"
                        tools:ignore="UseAppTint"
                        app:srcCompat="@drawable/logo_base_color" />

                    <ImageView
                        android:id="@+id/s7"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:tint="@color/grey"
                        tools:ignore="UseAppTint"
                        app:srcCompat="@drawable/logo_base_color" />

                    <ImageView
                        android:id="@+id/s8"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:tint="@color/grey"
                        tools:ignore="UseAppTint"
                        app:srcCompat="@drawable/logo_base_color" />

                    <ImageView
                        android:id="@+id/s9"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:tint="@color/grey"
                        tools:ignore="UseAppTint"
                        app:srcCompat="@drawable/logo_base_color" />

                    <ImageView
                        android:id="@+id/s10"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:tint="@color/grey"
                        app:srcCompat="@drawable/ic_baseline_emoji_food_beverage_24"
                        tools:ignore="VectorDrawableCompat" />
                </TableRow>

            </TableLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:text="사용 안내"
        android:textColor="@color/black"
        android:textSize="@dimen/subTitleText" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="- 음료 한 잔당 스탬프 1개를 적립해드립니다." />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="- 디저트류는 적립이 불가합니다." />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="- 10개 단위로 1회 사용이 가능합니다." />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="- 스탬프 10개를 모으시면 다음 주문부터 3,000원 할인을 해드립니다." />

</LinearLayout>